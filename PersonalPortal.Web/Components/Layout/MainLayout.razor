@using PersonalPortal.Web.Services
@inherits LayoutComponentBase
@inject AuthService AuthService
@inject NavigationManager Navigation
@implements IDisposable

<div class="page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Personal Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (AuthService.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Items
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/textnotes">Text Notes</a></li>
                                <li><a class="dropdown-item" href="/checklists">Checklists</a></li>
                                <li><a class="dropdown-item" href="/recipes">Recipes</a></li>
                                <li><a class="dropdown-item" href="/pictures">Pictures</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (AuthService.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-light">Hello, @AuthService.CurrentUser?.DisplayName</span>
                        </li>
                        <li class="nav-item">
                            <button class="btn btn-link nav-link text-light" @onclick="Logout">Logout</button>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid mt-4">
        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    protected override void OnInitialized()
    {
        AuthService.OnAuthStateChanged += OnAuthStateChangedHandler;
    }

    private async void OnAuthStateChangedHandler()
    {
        await InvokeAsync(StateHasChanged);
    }

    private void Logout()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/login");
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= OnAuthStateChangedHandler;
    }
}
