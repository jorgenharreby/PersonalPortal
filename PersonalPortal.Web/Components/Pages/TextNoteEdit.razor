@page "/textnotes/new"
@page "/textnotes/edit/{id:guid}"
@using PersonalPortal.Core.Models
@using PersonalPortal.Web.Services
@inject AuthService AuthService
@inject ApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>@(Id == Guid.Empty ? "New" : "Edit") Text Note</PageTitle>

@if (!AuthService.IsAuthenticated)
{
    Navigation.NavigateTo("/login");
}
else
{
    <div class="container">
        <h1>@(Id == Guid.Empty ? "New" : "Edit") Text Note</h1>

        @if (note == null)
        {
            <p>Loading...</p>
        }
        else
        {
            <EditForm Model="@note" OnValidSubmit="@HandleSubmit">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <InputText class="form-control" @bind-Value="note.Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Content</label>
                    <InputTextArea class="form-control" rows="15" @bind-Value="note.Content" />
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/textnotes" class="btn btn-secondary">Cancel</a>
                </div>
            </EditForm>
        }
    </div>
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    private TextNote? note;

    protected override async Task OnInitializedAsync()
    {
        if (Id == Guid.Empty)
        {
            note = new TextNote();
        }
        else
        {
            note = await ApiService.GetTextNoteByIdAsync(Id);
        }
    }

    private async Task HandleSubmit()
    {
        if (note == null) return;

        if (Id == Guid.Empty)
        {
            await ApiService.CreateTextNoteAsync(note);
        }
        else
        {
            await ApiService.UpdateTextNoteAsync(Id, note);
        }

        Navigation.NavigateTo("/textnotes");
    }
}
